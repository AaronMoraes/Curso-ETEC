/*COMANDO PARA CRIAR BANCO DE DADOS*/
create database Moviecom;
use Moviecom;
/* comando para criar tabela*/
create table genero(
id varchar(40) not null primary key,
tipo varchar(30),
valor decimal (10,2) );

/*comando para inserir dados na tabela*/
insert into genero(id, tipo, valor)values
(1, 'Aventura',2.5),
(2, 'Comédia' ,3.0),
(3, 'Romance', 2.5),
(4, 'Infantil', 3.0),
(5, 'Guerra', 3.0),
(6, 'Suspense', 2.5),
(7, 'Ficção', 3.0),
(8, 'Terror', 2.5),
(9, 'Documentário', 2.5),
(10, 'Musical', 3.0);

select * from genero;
alter table genero
add data_filme varchar(10);
update genero

set data_filme = "30/04/2024"
where id=1;
update genero

set data_filme= "01/05/2024"
where id=2;
