CREATE DATABASE EMPRESA;
USE empresa;

drop table funcionario;
CREATE TABLE funcionario(
CODFUN INTEGER NOT NULL PRIMARY KEY,
NOME VARCHAR (40) NOT NULL,
DEPTO CHAR(2),
FUNCAO CHAR(20) NOT NULL,
SALARIO DECIMAL(10,2),
ADMISSAO DATE);

