/*6- APRESENTAR UMA CONSULTA DE TODOS OS FUNCIONARIOS QUE TRABALHEM NA FUNCAO PROGRAMADOR OU ANALISTA*/
SELECT * FROM FUNCIONARIO WHERE (FUNCAO = 'PROGRAMADOR') OR (FUNCAO = 'ANALISTA');
